<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.geekvigarista.scrummanager.client.telas.componentes.defaultbox">
	<ui:with type="com.geekvigarista.scrummanager.client.i18n.Mensagem"
		field="msg"></ui:with>

	<g:HTMLPanel ui:field="conteudo">
		<g:Label text="{msg.cadastroDe}{msg.requisitos}" styleName="titulo1" />
		<hr />
		<g:HorizontalPanel width="">
			<g:VerticalPanel spacing="10">
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="{msg.requisitos}" styleName="titulo1" />
				</g:Cell>


				<g:DecoratorPanel title="{msg.requisitos}"
					ui:field="panelRequisitos">
					<c:CellList ui:field="requisitos" width="150px"></c:CellList>
				</g:DecoratorPanel>
				<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:HorizontalPanel horizontalAlignment="ALIGN_RIGHT"
						spacing="4">
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:Label text="Horas" ui:field="labelHorasTotais" />
						</g:Cell>
						<g:Button ui:field="btRm" text="-" title="" />
						<g:Button ui:field="btAdd" text="+" title="" />
					</g:HorizontalPanel>
				</g:Cell>

			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.titulo}" />
						</g:customCell>
						<g:customCell>
							<d:DefaultTextBox ui:field="titulo" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.prioridade}" />
						</g:customCell>
						<g:customCell>
							<d:DefaultListBox ui:field="prioridade" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.tempoEstimado}" />
						</g:customCell>
						<g:customCell>
							<g:HorizontalPanel>
								<d:DefaultIntegerBox ui:field="tempoEstimado" width="235px" />
								<g:Cell verticalAlignment="ALIGN_MIDDLE"
									horizontalAlignment="ALIGN_CENTER">
									<g:Label text="{msg.horas}" />
								</g:Cell>
							</g:HorizontalPanel>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.descricao}" />
						</g:customCell>
						<g:customCell>
							<g:RichTextArea ui:field="descricao" width="239px"/>
						</g:customCell>
					</g:row>
					<g:row/>
				</g:Grid>
				<g:Cell width="600px">
					<g:HorizontalPanel width="348px">
						<g:Label width="180px" />
						<g:Cell verticalAlignment="ALIGN_MIDDLE"
							horizontalAlignment="ALIGN_RIGHT">
							<g:Anchor text="{msg.cancelar}" ui:field="btCancelar" />
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_MIDDLE"
							horizontalAlignment="ALIGN_RIGHT">
							<g:Button text="{msg.salvar}" ui:field="btSalvar"></g:Button>
						</g:Cell>
					</g:HorizontalPanel>
				</g:Cell>
			</g:VerticalPanel>

		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 