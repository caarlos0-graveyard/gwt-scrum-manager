<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="com.geekvigarista.scrummanager.client.i18n.Mensagem"
		field="msg"></ui:with>
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel ui:field="conteudo">
		<g:VerticalPanel>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.nome}"/>
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="nome"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.papelStakeholder}"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="papelStakeholder"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.projeto}"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="projeto"/>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.usuario}"/>
					</g:customCell>
					<g:customCell>
						<g:ListBox ui:field="usuario"/>
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:Cell width="100%">
				<g:HorizontalPanel width="348px">
					<g:Label width="180px" />
					<g:Cell verticalAlignment="ALIGN_MIDDLE"
						horizontalAlignment="ALIGN_RIGHT">
						<g:Hyperlink text="{msg.cancelar}" ui:field="btCancelar"
							targetHistoryToken="newHistoryToken" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE"
						horizontalAlignment="ALIGN_RIGHT">
						<g:Button text="{msg.salvar}" ui:field="btSalvar"></g:Button>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>
		
	</g:HTMLPanel>
</ui:UiBinder> 