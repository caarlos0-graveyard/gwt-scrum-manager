<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:db="urn:import:com.geekvigarista.scrummanager.client.telas.componentes.defaultbox"
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
	<ui:with type="com.geekvigarista.scrummanager.client.i18n.Mensagem"
		field="msg"></ui:with>
	<g:HTMLPanel ui:field="conteudo">
		<g:VerticalPanel>
			<g:Grid>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.nome}" />
					</g:customCell>
					<g:customCell>
						<db:DefaultTextBox ui:field="nome" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.dataInicio}" />
					</g:customCell>
					<g:customCell>
						<db:DefaultDateBox ui:field="dataInicio"></db:DefaultDateBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.dataFim}" />
					</g:customCell>
					<g:customCell>
						<db:DefaultDateBox ui:field="dataFim"></db:DefaultDateBox>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.requisitos}" />
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="addRequisitos">+</g:Button>
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="{msg.stakeholders}" />
					</g:customCell>
					<g:customCell>
						<g:Button ui:field="addStakeholders">+</g:Button>
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:Cell width="100%">
				<g:HorizontalPanel width="348px">
					<g:Label width="180px" />
					<g:Cell verticalAlignment="ALIGN_MIDDLE"
						horizontalAlignment="ALIGN_RIGHT">
						<g:Hyperlink text="{msg.cancelar}" ui:field="btCancelar"
							targetHistoryToken="newHistoryToken" />
					</g:Cell>
					<g:Cell verticalAlignment="ALIGN_MIDDLE"
						horizontalAlignment="ALIGN_RIGHT">
						<g:Button text="{msg.salvar}" ui:field="btSalvar"></g:Button>
					</g:Cell>
				</g:HorizontalPanel>
			</g:Cell>
		</g:VerticalPanel>

	</g:HTMLPanel>
</ui:UiBinder> 