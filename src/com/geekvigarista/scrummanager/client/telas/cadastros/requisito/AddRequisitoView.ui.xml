<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d="urn:import:com.geekvigarista.scrummanager.client.telas.componentes.defaultbox">
	<ui:with type="com.geekvigarista.scrummanager.client.i18n.Mensagem"
		field="msg"></ui:with>

	<g:HTMLPanel ui:field="conteudo">
		<g:HorizontalPanel width="">
			<g:VerticalPanel>
				<c:CellList ui:field="requisitos" width="150px">

				</c:CellList>
			</g:VerticalPanel>

			<g:VerticalPanel>
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.titulo}" />
						</g:customCell>
						<g:customCell>
							<d:DefaultTextBox ui:field="titulo" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.prioridade}" />
						</g:customCell>
						<g:customCell>
							<d:DefaultListBox ui:field="prioridade" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.tempoEstimado}" />
						</g:customCell>
						<g:customCell>
							<g:HorizontalPanel>
								<d:DefaultIntegerBox ui:field="tempoEstimado" />
								<g:Label text="{msg.horas}" />
							</g:HorizontalPanel>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="{msg.anexos}" />
						</g:customCell>
						<g:customCell>
							<d:DefaultTextBox ui:field="anexos" />
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:Cell width="600px">
					<g:HorizontalPanel width="348px">
						<g:Label width="180px" />
						<g:Cell verticalAlignment="ALIGN_MIDDLE"
							horizontalAlignment="ALIGN_RIGHT">
							<g:Hyperlink text="{msg.cancelar}" ui:field="btCancelar"
								targetHistoryToken="newHistoryToken" />
						</g:Cell>
						<g:Cell verticalAlignment="ALIGN_MIDDLE"
							horizontalAlignment="ALIGN_RIGHT">
							<g:Button text="{msg.salvar}" ui:field="btSalvar"></g:Button>
						</g:Cell>
					</g:HorizontalPanel>
				</g:Cell>
			</g:VerticalPanel>

		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 